{
  "meta": {
    "name": "TibiaRise Design System",
    "version": "1.0.0",
    "description": "Premium, Arcade, Modern aesthetic with rounded corners and soft, vibrant glows."
  },
  "tokens": {
    "colors": {
      "background": "oklch(0.12 0.02 260)",
      "foreground": "oklch(0.98 0.01 260)",
      "card": "oklch(0.17 0.03 260)",
      "cardForeground": "oklch(0.98 0.01 260)",
      "popover": "oklch(0.12 0.02 260)",
      "popoverForeground": "oklch(0.98 0.01 260)",
      "primary": "oklch(0.65 0.22 250)",
      "primaryForeground": "oklch(0.1 0.05 260)",
      "secondary": "oklch(0.55 0.25 340)",
      "secondaryForeground": "oklch(0.98 0.01 260)",
      "muted": "oklch(0.25 0.05 260)",
      "mutedForeground": "oklch(0.7 0.05 260)",
      "accent": "oklch(0.25 0.05 260)",
      "accentForeground": "oklch(0.98 0.01 260)",
      "destructive": "oklch(0.6 0.2 20)",
      "destructiveForeground": "oklch(0.98 0 0)",
      "border": "oklch(0.25 0.05 260)",
      "input": "oklch(0.25 0.05 260)",
      "ring": "oklch(0.65 0.22 250)"
    },
    "borderRadius": {
      "none": "0",
      "sm": "calc(var(--radius) - 4px)",
      "DEFAULT": "var(--radius)",
      "md": "calc(var(--radius) - 2px)",
      "lg": "var(--radius)",
      "xl": "calc(var(--radius) + 4px)",
      "2xl": "calc(var(--radius) + 8px)",
      "3xl": "calc(var(--radius) + 12px)",
      "full": "9999px",
      "base": "1.5rem"
    },
    "spacing": {
      "structure": {
        "pagePadding": "2rem",
        "cardPadding": "1.5rem",
        "sectionGap": "3rem",
        "elementGap": "1rem"
      }
    },
    "shadows": {
      "glowPrimary": "0 0 20px oklch(0.65 0.22 250 / 0.3), 0 0 40px oklch(0.65 0.22 250 / 0.1)",
      "glowSecondary": "0 0 20px oklch(0.55 0.25 340 / 0.3), 0 0 40px oklch(0.55 0.25 340 / 0.1)",
      "soft": "0 10px 30px -10px oklch(0 0 0 / 0.5)"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, oklch(0.65 0.22 250 / 0.1) 0%, oklch(0.55 0.25 340 / 0.05) 100%)",
      "card": "linear-gradient(180deg, oklch(0.2 0.03 260) 0%, oklch(0.15 0.02 260) 100%)",
      "sidebar": "linear-gradient(180deg, oklch(0.14 0.02 260) 0%, oklch(0.1 0.02 260) 100%)"
    }
  },
  "components": {
    "card": {
      "borderRadius": "var(--radius-xl)",
      "padding": "1.5rem",
      "background": "var(--card)",
      "border": "1px solid var(--border)"
    },
    "button": {
      "borderRadius": "9999px",
      "padding": "0.75rem 1.5rem",
      "fontWeight": "600"
    },
    "input": {
      "borderRadius": "12px",
      "padding": "0.75rem 1rem",
      "background": "var(--input)",
      "border": "1px solid var(--border)"
    }
  }
}
