{
  "name": "tibiarise",
  "private": true,
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "turbo run dev --filter=@tibiarise/web",
    "dev:cron": "turbo run dev --filter=@tibiarise/cron",
    "db:generate": "turbo run db:generate --filter=@tibiarise/database",
    "db:migrate": "turbo run db:migrate --filter=@tibiarise/database",
    "db:push": "turbo run db:push --filter=@tibiarise/database",
    "deploy:web": "if [ -f .env ]; then dotenv -e .env -- sh -c 'npm run db:generate && npm run db:migrate && npm run build --filter=@tibiarise/web'; else npm run db:generate && npm run db:migrate && npm run build --filter=@tibiarise/web; fi"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "turbo": "^2.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "jose": "^6.1.3"
  }
}
